[MASTER]
# Files or directories to be skipped
ignore=migrations,venv,env,.venv,__pycache__,.pytest_cache,.ruff_cache,build,dist,.eggs,.tox,.coverage,docs

# Pickle collected data for later comparisons
persistent=yes

# Use multiple processes to speed up Pylint
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings
disable=C0114,  # missing-module-docstring
        C0115,  # missing-class-docstring
        C0116,  # missing-function-docstring
        R0903,  # too-few-public-methods (common in models)
        R0913,  # too-many-arguments
        W0212,  # protected-access (needed for some Flask patterns)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# String used as indentation unit
indent-string='    '

[DESIGN]
# Maximum number of arguments for function / method
max-args=7

# Maximum number of attributes for a class
max-attributes=10

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=4

# Ignore imports when computing similarities
ignore-imports=yes
